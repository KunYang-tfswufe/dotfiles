[global]
    # 圆角大小
    corner_radius = 8

    # 通知在屏幕上的位置
    # 可选值: top-right, top-left, bottom-right, bottom-left
    origin = top-right

    # 距离屏幕边缘的偏移量 (x, y)
    offset = 10x50

    # 通知宽度
    width = 350

    # 通知高度
    height = 100

    # 通知之间的间距
    gap_size = 10

    # 字体设置 (请确保你的系统安装了 "JetBrainsMono Nerd Font")
    font = JetBrainsMono Nerd Font 10

    # 文本格式
    # %a  - 应用名称
    # %s  - 摘要 (标题)
    # %b  - 正文
    # %I  - 图标名称
    # %p  - 进度
    format = "<b>%s</b>\n%b"

    # 文本对齐
    alignment = left

    # 文本换行
    word_wrap = yes

    # 图标和文本之间的间距
    text_icon_padding = 15

    # 图标位置
    # 可选值: left, right, off
    icon_position = left

    # 最小和最大图标尺寸
    min_icon_size = 48
    max_icon_size = 60

    # 图标搜索路径 (推荐安装 papirus-icon-theme)
    icon_theme = "Papirus-Dark"

    # 启用递归图标查找
    enable_recursive_icon_lookup = true

    # 通知堆叠
    stack_duplicates = true
    hide_duplicate_count = false

    # 边框宽度和颜色
    frame_width = 2
    frame_color = "#24283b"

    # 分隔符高度和颜色
    separator_height = 2
    separator_color = "#24283b"

    # 内边距
    padding = 12
    horizontal_padding = 12

    # 透明度 (需要 compositor, Hyprland 自带)
    transparency = 10

    # 当有全屏窗口时暂停通知
    fullscreen = "pause"

    # 快捷键
    # 关闭通知
    # close = ctrl+space
    # 关闭所有通知
    # close_all = ctrl+shift+space
    # 查看历史记录
    # history = ctrl+grave

[urgency_low]
    background = "#1a1b26"
    foreground = "#a9b1d6"
    timeout = 5

[urgency_normal]
    background = "#1a1b26"
    foreground = "#a9b1d6"
    timeout = 10

[urgency_critical]
    background = "#1a1b26"
    foreground = "#f7768e"
    frame_color = "#f7768e"
    timeout = 0
