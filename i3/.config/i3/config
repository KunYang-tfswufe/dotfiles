# i3 config file (Simplified & Optimized & Fullscreen Scratchpad)
# [Modified]: Workspaces reduced to 3

set $mod Mod4

# --- 字体与外观 ---
font pango:monospace 8

exec --no-startup-id picom --backend glx -b

exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id nm-applet

# [修改] TmuxAuto 专属配置 (全屏沉浸版)
# 解释：浮动 -> 去掉边框 -> 调整为100%宽高 -> 居中 -> 移入暂存区
for_window [class="^TmuxAuto$"] floating enable, border pixel 0, resize set 100 ppt 100 ppt, move position center, move scratchpad

exec --no-startup-id alacritty --class "TmuxAuto" -o window.opacity=0.89 -e $HOME/.local/bin/my-workspace.sh

exec --no-startup-id $HOME/.local/bin/zen
exec --no-startup-id sleep 3 && setxkbmap -option ctrl:nocaps && xset r rate 200 50

# --- 音量控制 (PulseAudio) ---
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# --- 窗口操作 ---
# 鼠标拖拽
floating_modifier $mod
default_border pixel 1
default_floating_border pixel 1

# 核心应用
bindsym $mod+Return exec alacritty -e tmux
bindsym $mod+Shift+q kill

# [修改] 唯一的暂存区快捷键 (已移除通用键位)
# 专属一键呼出 Tmux 开发环境 (Mod + ` 反引号键)
# 按一下全屏覆盖，再按一下隐藏
bindsym $mod+Tab [class="^TmuxAuto$"] scratchpad show

# 焦点移动 (方向键)
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# 窗口移动 (方向键)
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# 分屏模式
bindsym $mod+h split h
bindsym $mod+v split v

# 布局与模式切换
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent

# --- 工作区 (1-3) ---
# [修改] 这里已削减为3个工作区
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"

# 切换工作区
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3

# 移动窗口到工作区
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3

# --- i3 系统控制 ---
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Do you really want to exit i3?' -B 'Yes, exit i3' 'i3-msg exit'"

# --- 调整窗口大小 (无模态改良版) ---
bindsym $mod+Ctrl+Left resize shrink width 10 px or 10 ppt
bindsym $mod+Ctrl+Down resize grow height 10 px or 10 ppt
bindsym $mod+Ctrl+Up resize shrink height 10 px or 10 ppt
bindsym $mod+Ctrl+Right resize grow width 10 px or 10 ppt

bar {
    status_command i3status
    mode hide
    hidden_state hide
    modifier $mod
}

bindsym $mod+minus exec --no-startup-id maim -s | xclip -selection clipboard -t image/png && notify-send "区域截图" "已复制到剪贴板"
bindsym $mod+equal exec --no-startup-id maim | xclip -selection clipboard -t image/png && notify-send "全屏截图" "已复制到剪贴板"
bindsym $mod+bracketleft exec --no-startup-id sh -c 'mkdir -p ~/Pictures/Screenshots && maim -s ~/Pictures/Screenshots/$(date +%Y%m%d_%H%M%S).png && notify-send "区域已保存" "~/Pictures/Screenshots"'
bindsym $mod+bracketright exec --no-startup-id sh -c 'mkdir -p ~/Pictures/Screenshots && maim ~/Pictures/Screenshots/$(date +%Y%m%d_%H%M%S).png && notify-send "全屏已保存" "~/Pictures/Screenshots"'
