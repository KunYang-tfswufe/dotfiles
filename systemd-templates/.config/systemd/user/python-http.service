[Unit]
Description=Personal PDF.js Server
# 添加一个依赖项，确保网络连接后再启动服务 (可选但推荐)
After=network-online.target
Wants=network-online.target

[Service]
# 【关键修改】工作目录直接指向您 MyShare_sync 中的 pdf-reader 目录
WorkingDirectory=__HOME_DIR__/MyShare_sync/my-pdf-reader
ExecStart=/usr/bin/python3 -m http.server 8080
Restart=always

[Install]
WantedBy=default.target
